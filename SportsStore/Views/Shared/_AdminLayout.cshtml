<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <!--Стили-->
    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/dist/css/*.css" />
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
    <!--Скрипты для валидации модели на клиенте-->
    <script asp-src-include="~/lib/jquery/**/jquery.min.js"></script>
    <script asp-src-include="~/lib/jquery-validation/**/jquery.validate.min.js"></script>
    <script asp-src-include="~/lib/jquery-validation/**/messages_ru.js"></script>
    <script asp-src-include="~/lib/jquery-validation-unobtrusive/**/*.min.js"></script>
    <script>
        $.validator.setDefaults({
            onkeyup: function (element) {
                $(element).valid()
            }
        });
    </script>
</head>
<body class="panel panel-default">
    <div class="panel-heading">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="panel-body">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
