@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Zip</th>
        <th colspan="2">Details</th>
        <th></th>
    </tr>
    @foreach (Order item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Zip</td>
            <th>Product</th>
            <th>Quantity</th>
            <td>
                <form asp-action="MarkSnipped" method="post">
                    <input type="hidden" name="orderID" value="@item.OrderID"/>
                    <button type="submit" class="btn btn-sm btn-danger">Отправить</button>
                </form>
            </td>
        </tr>
        @foreach (CartLine line in item.Lines)
        {
            <tr>
                <td colspan="2"></td>
                <td>@line.Product.Name</td>
                <td>@line.Quantity</td>
                <td></td>
            </tr>
        }
    }
    </table>
}
else
{
    <div class="text-center text-info">Нет не отправленных заказов</div>
}
